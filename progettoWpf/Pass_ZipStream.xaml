<Window x:Class="progettoWpf.Pass_ZipStream"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:progettoWpf"
        mc:Ignorable="d"
        Title="password" Height="300" Width="500">
    <Grid>
        <CheckBox x:Name="pass_check" Content="no password" Margin="40"/>
        <PasswordBox x:Name="pass_box" PasswordChar="*" Height="24" Width="350" VerticalAlignment="Top" Margin="50 80" />
        <TextBlock x:Name="pass_text" Height="30" Width="300" TextAlignment="Center" Background="BlanchedAlmond"/>
        <Button FontSize="20" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="30" Click="Enter_pass_click">Enter</Button>
    </Grid>
</Window>
